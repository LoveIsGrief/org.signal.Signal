{
    "app-id": "org.signal.Signal.beta",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "19.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "signal",
    "separate-locales": false,
    "rename-desktop-file": "signal-desktop-beta.desktop",
    "rename-icon": "signal-desktop-beta",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.kde.StatusNotifierItem-2-1"
    ],
    "modules": [
        {
            "name": "signal-desktop-beta",
            "buildsystem": "simple",
            "build-commands": [
                "ar x signal-desktop*.deb",
                "rm -f signal-desktop*.deb",
                "tar xf data.tar.xz",
                "rm -f control.tar.gz data.tar.xz debian-binary",
                "cp -r usr/* opt/* /app",
                "rm -rf /app/share/icons/hicolor/1024x1024/",
                "chmod -R a-s,go+rX,go-w '/app/Signal Beta'",
                "sed -i 's|Exec=.*|Exec=signal %U|' /app/share/applications/signal-desktop-beta.desktop",
                "install signal.sh /app/bin/signal",
                "install -Dm644 org.signal.Signal.beta.appdata.xml /app/share/appdata/org.signal.Signal.beta.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://updates.signal.org/desktop/apt/pool/main/s/signal-desktop-beta/signal-desktop-beta_1.35.1-beta.2_amd64.deb",
                    "sha256": "cd5cf5b64fe36becaff9104449d468903f56e60f505dc32de2433591d0238ca6"
                },
                {
                    "type": "script",
                    "dest-filename": "signal.sh",
                    "commands": [
			"set -x",
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "export ZYPAK_DEBUG=1",
                        "export ZYPAK_STRACE=all",
                        "exec zypak-wrapper \"/app/Signal Beta/signal-desktop-beta\" \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "org.signal.Signal.beta.appdata.xml"
                }
            ]
        }
    ]
}
